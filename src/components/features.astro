---
// @ts-ignore
import { Icon } from 'astro-icon/components'
import services from '@assets/services.yml'
---

<div class="flex flex-col place-items-center">
  <h2 class="text-4xl font-serif lg:text-5xl font-bold">Our services</h2>
  <p class="text-lg mt-4 text-center text-black">
    We support you from a rough idea to a finished product, and any stops in
    between.
  </p>
</div>

<div class="grid sm:grid-cols-2 lg:grid-cols-3 mt-16 gap-16">
  {
    services.map((item) => (
      <div class="flex flex-col gap-4 items-start">
        <div class="mt-1 bg-black rounded-full pl-4 pt-4 h-20 w-20 shrink-0">
          <Icon class="text-dlmain w-12 h-12" name={item.icon} />
        </div>
        {/* <div> */}
        <h3 class="font-semibold px-2 rounded border-b-2 bg-dlmain text-lg font-serif">
          {item.title}
        </h3>{' '}
        <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
      </div>
      // </div>
    ))
  }
</div>
